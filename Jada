// Lina Coins
function redeemPoints() {
let points = document.getElementById('points');
let current = parseInt(points.textContent);

if(current >= 100){
points.textContent = current - 100;
alert("100 points redeemed! ðŸŽ‰");
} else {
alert("Not enough points ðŸ˜…");
}
}

